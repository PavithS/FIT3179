{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Gender of Immigrants",
  "height": 400,
  "params": [
    {
      "name": "Year_select",
      "value": "2019",
      "bind": {
        "input": "radio",
        "options": ["1990", "1995", "2000", "2005", "2010", "2015", "2019"],
        "labels": [
          "1990 |",
          "1995 |",
          "2000 |",
          "2005 |",
          "2010 |",
          "2015 |",
          "2019"
        ],
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PavithS/FIT3179/main/Data/worldmap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME_SORT",
            "type": "nominal",
            "title": "Country"
          }
        ]
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/PavithS/FIT3179/main/Data/worldmap.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "lookup": "properties.NAME_SORT",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/PavithS/FIT3179/main/Data/Immigration_gender.csv"
            },
            "key": "Country",
            "fields": [
              "1990M",
              "1995M",
              "2000M",
              "2005M",
              "2010M",
              "2015M",
              "2019M",
              "1990F",
              "1995F",
              "2000F",
              "2005F",
              "2010F",
              "2015F",
              "2019F",
              "1990",
              "1995",
              "2000",
              "2005",
              "2010",
              "2015",
              "2019"
            ]
          }
        },
        {
          "calculate": "100*datum[Year_select + 'M']/datum[Year_select]",
          "as": "Male Percent"
        },
        {"calculate": "datum[Year_select + 'M']", "as": "Male_immigration"},
        {"calculate": "datum[Year_select + 'F']", "as": "Female_immigration"}
      ],
      "projection": {"type": "equirectangular"},
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "Male Percent",
          "type": "quantitative",
          "legend": {"title": "Male %"},
          "scale": {
            "type": "threshold",
            "domain": [35, 45, 47.5, 50, 52.5, 55, 65, 75],
            "range": [
              "#b2182b",
              "#d6604d",
              "#f4a582",
              "#fddbc7",
              "#d1e5f0",
              "#92c5de",
              "#4393c3",
              "#2166ac",
              "#053061"
            ]
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME_SORT",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "Male Percent",
            "type": "quantitative",
            "title": "Male %",
            "format": ".1f"
          },
          {
            "field": "Male_immigration",
            "type": "quantitative",
            "title": "Male Immigration",
            "format": ","
          },
          {
            "field": "Female_immigration",
            "type": "quantitative",
            "title": "Female Immigration",
            "format": ","
          }
        ]
      }
    }
  ],
  "config": {}
}
