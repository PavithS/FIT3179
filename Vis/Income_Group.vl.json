{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PavithS/FIT3179/main/Data/World_Bank_Income_Groups.csv"
  },
  "mark": {"type": "bar", "cornerRadius": 0},
  "height": 255,
  "selection": {
    "group_highlight": {
      "type": "multi",
      "fields": ["World Bank Income Group"],
      "bind": "legend"
    }
  },
  "encoding": {
    "y": {
      "aggregate": "sum",
      "field": "Total_Immigration",
      "title": "Immigration",
      "axis": {"format": ".1s"}
    },
    "x": {
      "field": "Year",
      "axis": {"labelAngle": -45, "title": "Year", "format": ""}
    },
    "color": {
      "field": "World Bank Income Group",
      "scale": {
        "domain": [
          "High",
          "Upper-middle",
          "Lower-middle",
          "Low",
          "No group"
        ],
        "range": ["#9e9e00", "#009988", "#33bbee", "#984ea3", "#e41a1c"]
      },
      "title": "Income Group"
    },
    "opacity": {
      "condition": {"selection": "group_highlight", "value": 1},
      "value": 0.2
    },
    "tooltip": [
      {
        "field": "World Bank Income Group",
        "type": "nominal",
        "title": "Income group"
      },
      {
        "field": "Total_Immigration",
        "type": "quantitative",
        "title": "Immigration",
        "format": ","
      },
      {"field": "Year", "title": "Year"}
    ]
  },
  "config": {
  "axis": {"labelFont": "sans-serif", "titleFont": "sans-serif"},
    "legend": {"labelFont": "sans-serif", "titleFont": "sans-serif"},
    "header": {"labelFont": "sans-serif", "titleFont": "sans-serif"},
    "mark": {"font": "sans-serif"},
    "title": {"font": "sans-serif"}
  }
}
