{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "data": {
    "url": "https://raw.githubusercontent.com/PavithS/FIT3179/main/Data/Continent_immigration.csv"
  },
  "width": 400,
  "height": 300,
  "title": "Immigration into each Continent by Year",
  "layer": [
    {
      "encoding": {
        "x": {
          "field": "Y",
          "type": "quantitative",
          "axis": {
            "labelAngle": -45,
            "tickMinStep": 5,
            "title": "Year",
            "tickCount": 7,
            "format": ""
          }
        },
        "y": {
          "field": "Total Immigration",
          "type": "quantitative",
          "axis": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "range": [
              "#9e9e00",
              "#ff7f00",
              "#009988",
              "#33bbee",
              "#984ea3",
              "#e41a1c"
            ]
          }
        },
        "tooltip": [{"field": "Y", "type": "quantitative", "title": "Year"}]
      },
      "layer": [
        {"mark": "line"},
        {
          "selection": {
            "label": {
              "type": "multi",
              "nearest": true,
              "on": "mouseover",
              "encodings": ["x"],
              "empty": "none"
            }
          },
          "mark": "circle",
          "encoding": {
            "opacity": {
              "condition": {"selection": "label", "value": 1},
              "value": 0.3
            }
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"selection": "label"}}],
      "layer": [
        {
          "layer": [
            {
              "mark": {
                "type": "text",
                "align": "right",
                "dx": -10,
                "stroke": "white",
                "strokeWidth": 1
              }
            },
            {
              "mark": {"type": "text", "align": "right", "dx": -10},
              "encoding": {"color": {"field": "Continent", "type": "nominal"}}
            }
          ],
          "encoding": {
            "text": {"field": "Total Immigration", "type": "quantitative", "format": ","},
            "x": {"field": "Y", "type": "quantitative"},
            "y": {"field": "Total Immigration", "type": "quantitative"}
          }
        }
      ]
    }
  ],
  "config": {}
}
